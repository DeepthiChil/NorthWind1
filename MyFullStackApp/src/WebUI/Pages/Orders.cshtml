@page "{id}"
@model MyFullStackApp.WebUI.Pages.OrdersModel
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders for @Model.CustomerName</h1>

<ul id="orderList">
    @foreach (var o in Model.Orders)
    {
        <li>@o.OrderDate: @o.ShipCity</li>
    }
</ul>

<form method="post">
    <input type="hidden" name="CustomerID" value="@Model.CustomerID" />
    <input asp-for="ShipCity" placeholder="Ship City" />
    <button type="submit">Add Order</button>
</form>

<script src="~/js/signalr-client.js"></script>

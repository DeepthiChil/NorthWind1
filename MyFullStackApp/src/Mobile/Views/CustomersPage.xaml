<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="MyFullStackApp.Mobile.Views.CustomersPage"
    Title="Customers">
    <CollectionView x:Name="cv" SelectionChanged="OnCustomerSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" Margin="5">
                    <Label Text="{Binding CompanyName}" FontSize="18"/>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>

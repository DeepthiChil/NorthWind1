<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="MyFullStackApp.Mobile.Views.LoginPage"
    Title="Login">
    <VerticalStackLayout Padding="30">
        <Entry x:Name="userEntry" Placeholder="Username" />
        <Entry x:Name="passEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>
